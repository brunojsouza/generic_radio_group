<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultRadioButtonText">
        <item name="android:textColor">@color/bluey_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DefaultRadioButton">
        <item name="android:background">@drawable/bg_radio_custom</item>
        <item name="android:textColor">@drawable/text_view_color</item>
    </style>

</resources>
